#!/usr/bin/env bash

if [ $? -ne 0 ] ; then
        echo "$(trans "Неправильний вхідний параметр!")"; 1>&2
        exit 1;
fi

export SCRIPT_DIR="$(
  cd "$(
    dirname "$(
      (readlink "${BASH_SOURCE[0]}" || echo "${BASH_SOURCE[0]}") \
        | sed -e "s#^../#$(dirname "$(dirname "${BASH_SOURCE[0]}")")/#"
    )"
  )/.." >/dev/null \
  && pwd
)"
export TOOL_DIR="$SCRIPT_DIR/bin"
export GREEN='\033[0;32m'
export GRAY='\033[0;37m'
export RED='\033[0;31m'
export NC='\033[0m'
export ORANGE='\033[0;33m'

source_files_in_directory() {
    local directory="$1"

    if [[ -d "$directory" ]]; then
        local files=("$directory"/*)

        for file in "${files[@]}"; do
            if [[ -f "$file" ]]; then
                source "$file"
            fi
        done
    else
        echo -e "$(trans "${RED}Не знайдено папку '$directory'.${NC}")"
    fi
}
source_files_in_directory "$SCRIPT_DIR/utils"
source_files_in_directory "$SCRIPT_DIR/menu"

check_updates
localization_file=$(apply_localization "$@")
if [[ -n "$localization_file" ]]; then
  source "$localization_file"
fi

if [ "$1" = "--auto-install" ] ; then
   install_fail2ban
   configure_fail2ban
   install_ufw
   configure_ufw
   install_db1000n
   install_distress
   install_mhddos
   extend_ports
   mhddos_run
   mhddos_auto_enable
   get_ddoss_status
elif [ "$1" = "--restore" ] ; then
  sudo rm -rf /opt/itarmy
  curl -sL https://raw.githubusercontent.com/it-army-ua-scripts/ADSS/install/install.sh  | bash -s
else
    main_menu
fi